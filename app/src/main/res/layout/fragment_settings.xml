<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/slash_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_filter"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_filter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp" />

    <TextView
        android:id="@+id/tv_category_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_category"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="4dp" />

    <TextView
        android:id="@+id/tv_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie with rate from"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_category_value"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/tv_rate_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_rate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="4dp" />

    <TextView
        android:id="@+id/tv_release_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Release year"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_rate_value"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="16dp" />

    <TextView
        android:id="@+id/tv_release_year_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_release_year"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="4dp" />

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SORT"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/slash_bg"
        android:layout_marginVertical="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_release_year_value"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_sort"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_sort_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textSize="18sp"
        android:layout_marginVertical="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_sort"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sort_by_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/tv_sort_by"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
